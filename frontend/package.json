{
  "name": "contexture",
  "version": "0.2.0",
  "scripts": {
    "css:compile-dev": "node-sass --include-path node_modules --precision 6 scss/ -o assets/css/",
    "css:compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss/ -o assets/css/",
    "css:prefix": "postcss --replace assets/css/contexture.css --use autoprefixer --map",
    "css:build": "npm-run-all css:compile css:prefix",
    "elm:reload": "nodetouch src/dummy.elm",
    "elm:build": "elm make src/Main.elm src/Components/*.elm --output=assets/js/Contexture.js",
    "elm:start": "elm-live src/Main.elm src/Components/*.elm --open --pushstate -- --output=assets/js/Contexture.js",
    "build": "npm-run-all css:build elm:build",
    "watch": "nodemon -e scss -x \"npm-run-all css:compile-dev elm:reload\"",
    "start": "npm-run-all -p elm:start watch"
  },
  "devDependencies": {
    "autoprefixer": "~10.2.5",
    "bootstrap": "~5.0.0-beta3",
    "elm": "~0.19.1-5",
    "elm-live": "~4.0.2",
    "node-sass": "~9.0.0",
    "nodemon": "~2.0.22",
    "npm-pack-here": "~1.2.0",
    "npm-run-all": "~4.1.5",
    "postcss": "~8.4.31",
    "postcss-cli": "~8.3.1",
    "touch": "~3.1.0"
  },
  "dependencies": {
    "bootstrap-icons": "~1.4.0"
  },
  "main": "index.html",
  "files": [
    "*.html",
    "assets/",
    "node_modules/"
  ],
  "bundleDependencies": [
    "bootstrap-icons",
    "bootstrap"
  ]
}
